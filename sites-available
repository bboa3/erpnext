map $http_upgrade $connection_upgrade { default upgrade; "" close; }

# --- HTTP: redirect to HTTPS, keep ACME path ---
server {
  listen 80;
  listen [::]:80;
  server_name erp.mozeconomia.co.mz *.erp.mozeconomia.co.mz;

  location /.well-known/acme-challenge/ { root /var/www/html; }

  return 301 https://$host$request_uri;
}

# --- HTTPS: ERPNext reverse proxy ---
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name erp.mozeconomia.co.mz *.erp.mozeconomia.co.mz;

  ssl_certificate     /etc/letsencrypt/live/erp.mozeconomia.co.mz/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/erp.mozeconomia.co.mz/privkey.pem;

  # Security headers (HSTS only on HTTPS)
  add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
  add_header X-Frame-Options "SAMEORIGIN" always;
  add_header X-Content-Type-Options "nosniff" always;
  add_header X-Permitted-Cross-Domain-Policies "none" always;
  add_header Referrer-Policy "no-referrer-when-downgrade" always;
  add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:; object-src 'none'; frame-ancestors 'none'; base-uri 'self';" always;

  location / {
    proxy_pass http://127.0.0.1:8080;

    proxy_http_version 1.1;
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host  $host;
    proxy_set_header X-Forwarded-Port  443;
    client_max_body_size 50m;
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;

    # WebSockets
    proxy_set_header Upgrade           $http_upgrade;
    proxy_set_header Connection        $connection_upgrade;

    proxy_buffering off;
  }

  # Optional hardening of sensitive paths
  location ~ /\.env                { deny all; }
  location ~ /\.(git|svn|hg)       { deny all; }
  location ~ /vendor/              { deny all; }
  location ~ /storage/app/private  { deny all; }

  access_log /var/log/nginx/erpnext_access.log;
  error_log  /var/log/nginx/erpnext_error.log;
}
